name 's6-linux-init'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: '2.3.10.0-40',
)

with_flags = %w(skalibs execline).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  **with_flags
)

harden

build do
  configure
  make
  install
end

test do
  run 'homeof root'
end
